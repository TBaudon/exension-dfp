<xml>
	
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
	
	<files id="iphone">
		
		<compilerflag value="-Iinclude"/>
        <compilerflag value="-F../dependencies/ios/" />
        
        <file name="src/extensionDFP.mm"/>
	</files>
	
	<set name="SLIBEXT" value=".lib" if="windows"/>
	<set name="SLIBEXT" value=".a" unless="windows"/>
	<set name="SLIBEXT" value=".so" if="webos"/>
	
	<set name="DEBUGEXTRA" value="-debug" if="fulldebug" />
    
    <!--<lib name="../dependencies/ios/libGoogleMobileAds.a" if="iphone"/>-->
	
	<target id="NDLL" output="${LIBPREFIX}extension_dfp${MSVC_LIB_VERSION}${DEBUGEXTRA}${LIBEXTRA}" tool="linker" toolid="${STD_MODULE_LINK}">
		
		<outdir name="../ndll/${BINDIR}"/>
		<ext value=".ndll" if="windows || mac || linux"/>
		
        <section if="iphone" >
            <files id="iphone" />
        </section>
		
	</target>
	
	<target id="default">
		
		<target id="NDLL"/>
		
	</target>
	
</xml>